@model NowyPrzewodnikMVC.Models.Waypoint

@{
    ViewData["Title"] = "ZarzƒÖdzanie Trasami";
}

<div class="container mt-5" style="max-width: 1200px;">
    
    <div class="card bg-dark text-white mb-4 shadow border-secondary">
        <div class="card-body d-flex align-items-center gap-3">
            <img src="@Model.ImageUrl" 
                 style="width: 80px; height: 60px; object-fit: cover; border-radius: 5px;"
                 onerror="this.src='https://placehold.co/100?text=?'">
            <div>
                <h2 class="fw-bold mb-0">@Model.Name <span class="fs-6 text-muted">(ID: @Model.Id)</span></h2>
            </div>
            <a asp-action="Index" class="btn btn-outline-light ms-auto">‚Üê Wr√≥ƒá</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-7">
            <div class="card bg-dark text-white border-secondary shadow">
                <div class="card-header border-secondary">
                    <h5 class="mb-0">Lista Po≈ÇƒÖcze≈Ñ</h5>
                </div>
                <div class="card-body p-0" style="height: 500px !important; overflow-y: scroll !important; display: block !important;">
                    <table class="table table-dark table-striped mb-0">
                        <thead style="position: sticky; top: 0; background: #333; z-index: 5;">
                            <tr>
                                <th class="p-3">Kierunek</th>
                                <th class="p-3">Cel</th>
                                <th class="p-3 text-end">Akcja</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.OutboundConnections.Any())
                            {
                                foreach (var conn in Model.OutboundConnections)
                                {
                                    <tr>
                                        <td class="p-3 align-middle">
                                            @if(conn.Direction == "FORWARD") { <span class="badge bg-success">‚¨ÜÔ∏è Prosto</span> }
                                            @if(conn.Direction == "LEFT") { <span class="badge bg-warning text-dark">‚¨ÖÔ∏è Lewo</span> }
                                            @if(conn.Direction == "RIGHT") { <span class="badge bg-info text-dark">‚û°Ô∏è Prawo</span> }
                                            @if(conn.Direction == "BACK") { <span class="badge bg-secondary">‚¨áÔ∏è Ty≈Ç</span> }
                                        </td>
                                        <td class="p-3 align-middle">
                                            <strong>@conn.Target?.Name</strong>
                                        </td>
                                        <td class="p-3 text-end">
                                            <form asp-action="DeleteConnection" method="post">
                                                <input type="hidden" name="connectionId" value="@conn.Id" />
                                                <button type="submit" class="btn btn-sm btn-danger">Usu≈Ñ</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="3" class="p-5 text-center">Brak po≈ÇƒÖcze≈Ñ</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <div class="card bg-dark text-white border-success shadow" style="height: 550px;">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Dodaj Nowe</h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <form asp-action="AddConnection" method="post" class="h-100 d-flex flex-column">
                        <input type="hidden" name="sourceId" value="@Model.Id" />

                        <div class="mb-3 flex-grow-1 d-flex flex-column">
                            <label class="form-label fw-bold">Wybierz cel:</label>
                            <select name="targetId" class="form-select bg-secondary text-white border-0 flex-grow-1" size="10" style="overflow-y:auto;" required>
                                @foreach (var place in ViewBag.AllWaypoints)
                                {
                                    if (place.Id != Model.Id)
                                    {
                                        <option value="@place.Id" class="p-2 border-bottom border-dark">üìç @place.Name</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Kierunek:</label>
                            <div class="d-flex gap-2 flex-wrap">
                                <input type="radio" class="btn-check" name="direction" id="d1" value="FORWARD" checked>
                                <label class="btn btn-outline-light flex-fill" for="d1">‚¨ÜÔ∏è Prosto</label>
                                <input type="radio" class="btn-check" name="direction" id="d2" value="LEFT">
                                <label class="btn btn-outline-light flex-fill" for="d2">‚¨ÖÔ∏è Lewo</label>
                                <input type="radio" class="btn-check" name="direction" id="d3" value="RIGHT">
                                <label class="btn btn-outline-light flex-fill" for="d3">‚û°Ô∏è Prawo</label>
                                <input type="radio" class="btn-check" name="direction" id="d4" value="BACK">
                                <label class="btn btn-outline-light flex-fill" for="d4">‚¨áÔ∏è Ty≈Ç</label>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success w-100 py-3 fw-bold">DODAJ PO≈ÅƒÑCZENIE</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>