@model NowyPrzewodnikMVC.Models.Waypoint

@{
    ViewData["Title"] = "ZarzƒÖdzanie Trasami";
}

<div class="container mt-5" style="max-width: 1200px;">
    
    <div class="card bg-dark text-white mb-4 shadow border-secondary">
        <div class="card-body d-flex align-items-center gap-3">
            <img src="@Model.ImageUrl" 
                 style="width: 100px; height: 70px; object-fit: cover; border-radius: 8px; border: 1px solid #555;"
                 onerror="this.src='https://placehold.co/100?text=?'">
            <div>
                <h5 class="text-white-50 text-uppercase mb-0 small">Edycja tras dla:</h5>
                <h2 class="fw-bold mb-0">@Model.Name</h2>
            </div>
            <a asp-action="Index" class="btn btn-outline-light ms-auto">‚Üê Powr√≥t</a>
        </div>
    </div>

    <div class="row g-4">
        
        <div class="col-lg-7">
            <div class="card bg-dark text-white border-secondary shadow h-100">
                <div class="card-header border-secondary py-3">
                    <h5 class="mb-0">üó∫Ô∏è Lista Po≈ÇƒÖcze≈Ñ</h5>
                </div>
                
                <div class="card-body p-0" style="height: 450px; overflow-y: scroll; background: #1a1a1a;">
                    
                    <table class="table table-dark table-hover mb-0 align-middle">
                        <thead class="text-secondary small text-uppercase" style="position: sticky; top: 0; background: #2c3034; z-index: 10; box-shadow: 0 2px 5px rgba(0,0,0,0.5);">
                            <tr>
                                <th class="ps-4 py-3">Kierunek</th>
                                <th class="py-3">Cel podr√≥≈ºy</th>
                                <th class="text-end pe-4 py-3">Usu≈Ñ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.OutboundConnections.Any())
                            {
                                foreach (var conn in Model.OutboundConnections)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            @if(conn.Direction == "FORWARD") { <span class="badge bg-success">‚¨ÜÔ∏è Prosto</span> }
                                            @if(conn.Direction == "LEFT") { <span class="badge bg-warning text-dark">‚¨ÖÔ∏è Lewo</span> }
                                            @if(conn.Direction == "RIGHT") { <span class="badge bg-info text-dark">‚û°Ô∏è Prawo</span> }
                                            @if(conn.Direction == "BACK") { <span class="badge bg-secondary">‚¨áÔ∏è W ty≈Ç</span> }
                                        </td>
                                        <td>
                                            <div class="fw-bold">@conn.Target?.Name</div>
                                            <div class="small text-muted">ID: @conn.TargetId</div>
                                        </td>
                                        <td class="text-end pe-4">
                                            <form asp-action="DeleteConnection" method="post">
                                                <input type="hidden" name="connectionId" value="@conn.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger px-3">üóëÔ∏è</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="3" class="text-center text-muted py-5">
                                        <div class="fs-1 opacity-50 mb-2">üì≠</div>
                                        <p class="mb-0">Brak po≈ÇƒÖcze≈Ñ.</p>
                                    </td>
                                </tr>
                            }
                            
                            @if(Model.OutboundConnections.Count < 5) 
                            {
                                <tr style="height: 200px;"><td colspan="3" class="text-center text-muted small align-bottom pb-3">Tu jest miejsce na wiƒôcej po≈ÇƒÖcze≈Ñ...</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-5">
            <div class="card bg-dark text-white border-success shadow">
                <div class="card-header bg-success text-white py-3">
                    <h5 class="mb-0">‚ûï Dodaj nowe</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="AddConnection" method="post">
                        <input type="hidden" name="sourceId" value="@Model.Id" />

                        <div class="mb-3">
                            <label class="form-label text-white-50 fw-bold small">Wybierz cel z listy:</label>
                            
                            <select name="targetId" class="form-select bg-secondary text-white border-0" size="8" style="overflow-y: auto;" required>
                                @foreach (var place in ViewBag.AllWaypoints)
                                {
                                    if (place.Id != Model.Id)
                                    {
                                        <option value="@place.Id" class="p-2 border-bottom border-dark">üìç @place.Name (ID: @place.Id)</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label text-white-50 fw-bold small">Kierunek:</label>
                            <div class="d-grid gap-2">
                                <input type="radio" class="btn-check" name="direction" id="d1" value="FORWARD" checked>
                                <label class="btn btn-outline-light text-start" for="d1">‚¨ÜÔ∏è Prosto</label>

                                <div class="btn-group">
                                    <input type="radio" class="btn-check" name="direction" id="d2" value="LEFT">
                                    <label class="btn btn-outline-light" for="d2">‚¨ÖÔ∏è Lewo</label>

                                    <input type="radio" class="btn-check" name="direction" id="d3" value="RIGHT">
                                    <label class="btn btn-outline-light" for="d3">‚û°Ô∏è Prawo</label>
                                </div>

                                <input type="radio" class="btn-check" name="direction" id="d4" value="BACK">
                                <label class="btn btn-outline-light text-start" for="d4">‚¨áÔ∏è W ty≈Ç</label>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success w-100 py-2 fw-bold">DODAJ ‚ûï</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>