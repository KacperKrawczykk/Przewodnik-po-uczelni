@model NowyPrzewodnikMVC.Models.Waypoint

<div class="container mt-5">
    <div class="card shadow p-4 mx-auto" style="max-width: 600px;">
        <h3 class="mb-4">➕ Dodaj Nowe Miejsce</h3>
        
        <form asp-action="Create" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label fw-bold">Nazwa Miejsca</label>
                <input asp-for="Name" class="form-control" placeholder="np. Sala 202" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Opis (opcjonalne)</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="np. Godziny otwarcia: 8-16"></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Wybierz Zdjęcie</label>
                <input type="file" name="imageFile" class="form-control" accept="image/*" />
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
                <button type="submit" class="btn btn-success px-4">Stwórz Miejsce</button>
            </div>
        </form>
    </div>
</div>